import java.io.*;

public class ChacterStreams {


        public static void main(String[] args) throws IOException {
            FileReader in = null;
            FileWriter out = null;
            in=new FileReader("C:\\Users\\HP\\Desktop\\input.txt");
            out= new FileWriter("C:\\Users\\HP\\Desktop\\output1.txt");
            int c;
            while((c=in.read())!=-1){
                out.write(c);
                System.out.print((char)c);
            }
            in.close();
            out.close();
        }
    }

